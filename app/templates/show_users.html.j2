{% extends 'base.html.j2' %}
{%block css%}
 <link rel="stylesheet" href="{{url_for('static',filename='css/home.css')}}">
{%endblock%}
{% block content %}
{% for user in users %}
        <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
            <img src="" class="img-fluid rounded-start" alt="avatar">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{user.first_name}} {{user.last_name}}</h5>
                <p class="card-text">Would you like to Attack or Unattack User?</p>
                <a href="/poki_attack/{{user.id}}" class="btn btn-info">Attack</a>
                <p> wins/losses</p>
                <p>{{user.wins}}/{{user.losses}} </p>
                <p class="card-text">Users caught Pokemon:</p>
            {% for poki in user.pokemon %}
                <h5 class="card-title">{{poki.Name}}</h5>
            {% endfor %}
            


            </div>
            </div>
        </div>
     </div>  
    {% endfor %}

{% endblock %}